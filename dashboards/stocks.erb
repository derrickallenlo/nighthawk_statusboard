    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="forecast" data-view="Forecast" data-widget_title="<img src='http://forecast.io/favicon.ico' />Weather Forecast"> ></div>
    </li>
    <li class="purple" data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div class="purple" data-id="tomtom" data-view="Traffic" data-title="Time to get to Work"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="yahoo_stock_quote_brcm" data-view="Number" data-title="Broadcom" style="background-color:#0432ef;" data-prefix="$"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="yahoo_stock_quote_inin" data-view="Number" data-title="ININ" style="background-color:#660585;" data-prefix="$"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="yahoo_stock_quote_wdc" data-view="Number" data-title="Western Digital" style="background-color:#324d8f;" data-prefix="$"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="instadash" data-view="Instadash"></div>
    </li>
  </ul>
</div>

